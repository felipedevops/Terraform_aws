resource "aws_iam_role" "iam_for_ecs" {
  name = "${var.infra_env}-iam_for_ecs"
  
  assume_role_policy = <<EOF
{
  "Version": "2008-10-17",
  "Statement": [
    {
      "Sid": "",
      "Effect": "Allow",
      "Principal": {
        "Service": "ec2.amazonaws.com"
      },
      "Action": "sts:AssumeRole"
    }
  ]
}
EOF
}

resource "aws_iam_policy" "policy_ecs" {
  name        = "${var.infra_env}-policy"
  path        = "/"
  description = "My test policy"

  # Terraform's "jsonencode" function converts a
  # Terraform expression result to valid JSON syntax.
  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = [
          "logs:CreateLogStream",
          "logs:PutLogEvents",
          "lambda:*",
          "cloudwatch:GetMetricData",
          "cloudwatch:*",
          "ecs:*"
        ]
        Effect   = "Allow"
        Resource = "*"
      },
    ]
  })
}

resource "aws_iam_policy_attachment" "ecs-attach" {
  name       = "${var.infra_env}-attachment"
  #users      = [aws_iam_user.user.name]
  roles      = [aws_iam_role.iam_for_ecs.name]
  #groups     = [aws_iam_group.group.name]
  policy_arn = aws_iam_policy.policy_ecs.arn
}